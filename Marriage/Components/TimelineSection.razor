<style>
    .timeline-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        margin-top: 40px;
    }

    .timeline-item {
        flex: 1;
        min-width: 250px;
        max-width: 350px;
        background-color: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: var(--shadow);
        text-align: center;
        transition: transform 0.3s ease;
    }

        .timeline-item:hover {
            transform: translateY(-10px);
        }

    .timeline-icon {
        font-size: 2.5rem;
        color: var(--accent-color);
        margin-bottom: 20px;
    }

    .timeline-time {
        font-size: 1.5rem;
        margin-bottom: 10px;
        color: var(--secondary-color);
        font-weight: 500;
    }
</style>

<div class="section">
    <div class="container">
        <h2 class="section-title">Тайминг мероприятия</h2>
        <div class="timeline-container">
            @foreach (var item in timelineItems)
            {
                <div class="timeline-item">
                    <div class="timeline-icon">
                        <i class="@item.Icon"></i>
                    </div>
                    <h3 class="timeline-time">@item.Time</h3>
                    <p>@item.Description</p>
                </div>
            }
        </div>
    </div>
</div>
