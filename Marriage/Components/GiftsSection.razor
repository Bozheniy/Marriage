<style>
    .gifts-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
    }

    .gift-item {
        flex: 1;
        min-width: 200px;
        max-width: 300px;
        background-color: white;
        border-radius: 10px;
        padding: 30px;
        box-shadow: var(--shadow);
        text-align: center;
        transition: all 0.3s ease;
    }

        .gift-item:hover {
            background-color: var(--primary-color);
        }

    .gift-icon {
        font-size: 2.5rem;
        color: var(--accent-color);
        margin-bottom: 20px;
    }
</style>

<div class="section" style="background-color: #f9f9f9;">
    <div class="container">
        <h2 class="section-title">Подарки</h2>
        <div class="gifts-container">
            @foreach (var gift in gifts)
            {
                <div class="gift-item">
                    <div class="gift-icon">
                        <i class="@gift.Icon"></i>
                    </div>
                    <h3>@gift.Title</h3>
                    <p>@gift.Description</p>
                </div>
            }
        </div>
    </div>
</div>
